{
  "name": "ts-library-template",
  "version": "0.0.0",
  "description": "A TypeScript library template.",
  "keywords": [
    "TODO"
  ],
  "bugs": {
    "url": "https://github.com/clebert/ts-library-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clebert/ts-library-template.git"
  },
  "license": "MIT",
  "author": "Clemens Akens <clebert@me.com>",
  "files": [
    "lib"
  ],
  "sideEffects": false,
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/cjs/index.d.ts",
  "scripts": {
    "precompile": "rm -rf lib",
    "compile": "tsc --project tsconfig.cjs.json && tsc --project tsconfig.esm.json",
    "format": "prettier --write '**/*.{html,js,json,md,ts,tsx,yml}'",
    "release": "npm version",
    "postrelease": "git push --follow-tags",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-typescript": "^7.8.3",
    "@size-limit/preset-small-lib": "^4.0.0",
    "@types/jest": "^25.0.0",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "size-limit": "^4.0.0",
    "typescript": "^3.7.5"
  },
  "size-limit": [
    {
      "path": "lib/esm/index.js",
      "limit": "1.0 KB"
    }
  ]
}
